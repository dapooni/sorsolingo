                pos_hint: {"center_x": .5, "center_y": .25}
                canvas:
                    Color:
                        rgb: rgba(157, 147, 128, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]

                TextInput:
                    hint_text: "Type here..."
                    hint_text_color: (0, 0, 0, 1)
                    size_hint: 0.8, None
                    pos_hint: {"left": 1, "center_y": .5}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 50
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 20
                    multiline: False

                MDIconButton:
                    icon: 'microphone'
                    pos_hint: {"right": 1, "center_y": 0.5}
                    size: dp(38), dp(38)

            Button:
                text: "Search"
                font_name: "fonts/Rubik-VariableFont.ttf"
                bold: True
                background_color: 0, 0, 0, 0
                size_hint: .4, .045
                pos_hint: {"center_x": .5, "center_y": .18}
                on_release:
                    root.manager.transition.direction = "left"
