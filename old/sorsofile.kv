WindowManager:
    Start:
    Login:
    Forgot:
    SignUp:
    MainWindow:
    Profile:

<Start>:
    name: "start"
    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1
            MDLabel:
                text: "sorsolingo."
                font_name: "fonts/RubikOne-Regular.ttf"
                font_size: 45
                pos_hint: {"center_x": .7, "center_y": .84}
                color: '90691C'

            Image:
                source: "assets/Sorsolingo.png"
                pos_hint: {"center_x": .48, "center_y": .65}
                size_hint: .83, .83

            MDLabel:
                text: "A Bicol dialect Machine Translator"
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 25
                pos_hint: {"center_x": .5, "center_y": .47}
                halign: "center"
                color: '6D5F5F'

            Button:
                text: "LOGIN WITH EMAIL"
                font_name: "fonts/RubikOne-Regular.ttf"
                bold: True
                background_color: 0, 0, 0, 0
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .30}
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "login"
                canvas.before:
                    Color:
                        rgb: rgba(117, 93, 47, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                Image:
                    source: "assets/email.png"
                    size: self.parent.height * 0.55, self.parent.height * 0.55
                    pos: self.parent.x + 35, self.parent.center_y + 2 - self.height / 2

            Button:
                text: "Didn't have an account? [color=000000][b]Sign Up[/b][/color]."
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 20
                color: '6D5F5F'
                markup: True
                background_color: 0, 0, 0, 0
                size_hint: .8, .065
                pos_hint: {"center_x": .5, "center_y": .2}
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "signup"

<Login>:
    name: "login"
    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1

            MDIconButton:
                icon: "assets/arrow.png"
                pos_hint: {"center_y": .95}
                size_hint: None, None
                user_font_size: "30sp"
                theme_text_color: "Custom"
                text_color: rgba(26, 24, 58, 255)
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "start"

            MDLabel:
                text: "sorsolingo."
                font_name: "fonts/RubikOne-Regular.ttf"
                font_size: 45
                pos_hint: {"center_x": .7, "center_y": .84}
                color: '90691C'

            MDLabel:
                text: "Log in on Sorsolingo :)"
                font_name: "fonts/RobotoCondensed-Regular.ttf"
