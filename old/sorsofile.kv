<MainWindow>:
    name: "main"
    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.35
                pos_hint: {'top': 1}
                canvas.before:
                    Color:
                        rgb: rgba(231, 209, 168, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]

            MDIconButton:
                icon: "assets/arrow.png"
                pos_hint: {"center_y": .95}
                size_hint: None, None
                user_font_size: "30sp"
                theme_text_color: "Custom"
                text_color: rgba(26, 24, 58, 255)
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "start"

            Image:
                source: "assets/girl_icon.png"
                pos_hint: {"center_x": .85, "center_y": .85}
                size_hint: .30, .30

            MDLabel:
                text: "Welcome,"
                font_name: "fonts/Rubik-Bubbles-Regular.ttf"
                font_size: 20
                pos_hint: {"center_x": .62, "center_y": .86}
                halign: "center"
                color: 'FFFFFF'

            MDLabel:
                text: "Name KivyMD"
                font_name: "fonts/Rubik-VariableFont.ttf"
                font_size: 18
                pos_hint: {"center_x": .61, "center_y": .83}
                halign: "center"
                color: '000000'

            Image:
                source: "assets/Sorsolingo2.png"
                pos_hint: {"center_x": .5, "center_y": .58}
                size_hint: .70, .70

            MDLabel:
                text: "sorsolingo."
                font_name: "fonts/RubikOne-Regular.ttf"
                font_size: 45
                pos_hint: {"center_x": .7, "center_y": .41}
                color: '90691C'

            MDLabel:
                text: "A Bicol dialect Machine Translator"
                font_name: "fonts/RobotoCondensed-Regular.ttf"
