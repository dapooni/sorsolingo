                pos_hint: {"center_x": .48, "center_y": .78}
                halign: "center"
                color: '6D5F5F'

            Image:
                source: "assets/Sorsolingo2.png"
                pos_hint: {"center_x": .5, "center_y": .60}
                size_hint: .70, .70

            MDFloatLayout:
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .38}
                canvas:
                    Color:
                        rgb: rgba(216, 201, 173, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                TextInput:
                    hint_text: "Email"
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 75
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 20
                    multiline: False
                Image:
                    source: "assets/email.png"
                    size_hint: None, None
                    size: 40, 40
                    pos_hint: {"center_x": .1, "center_y": .5}


            MDFloatLayout:
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .29}
                canvas:
                    Color:
                        rgb: rgba(216, 201, 173, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                TextInput:
                    hint_text: "Password"
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 70
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 20
                    multiline: False
                    password: True
                Image:
                    source: "assets/key.png"
                    size_hint: None, None
                    size: 35, 35
                    pos_hint: {"center_x": .1, "center_y": .5}

            Button:
                text: "LOGIN WITH EMAIL"
                font_name: "fonts/RubikOne-Regular.ttf"
                bold: True
                background_color: 0, 0, 0, 0
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .20}
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "main"
                canvas.before:
                    Color:
                        rgb: rgba(117, 93, 47, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]

            Button:
                text: "Forgot password? [color=000000][b]Click here[/b][/color]."
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 20
                color: '6D5F5F'
                markup: True
                background_color: 0, 0, 0, 0
                size_hint: .5, .065
                pos_hint: {"center_x": .5, "center_y": .12}
