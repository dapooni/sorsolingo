                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "dictionary"

<DictionaryScreen>:
    name: "dictionary"
    translate_input: translate_input
    translate_output: translate_output

    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1

            Image:
                source: "assets/Sorsolingo2.png"
                size_hint: .4, .05
                pos_hint: {"center_x": .1, "center_y": .9}
                background_color: 0, 0, 0, 0

            MDLabel:
                text: "sorsolingo."
                font_size: 24
                halign: "center"
                font_name: "fonts/RubikOne-Regular.ttf"
                pos_hint: {"center_x": .35, "center_y": .9}
                color: '90691C'

            Button:
                size_hint: .4, .05
                pos_hint: {'center_x': .85, "center_y": .9}
                background_color: 0, 0, 0, 0
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "profile"
                Image:
                    source: 'assets/girl_icon.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            MDBoxLayout:
                orientation: "vertical"
                size_hint: .82, .05
                pos_hint: {"center_x": .5, "center_y": .79}
                Spinner:
                    id: spinner_id
                    text: "Translate from..."
                    color: 0, 0, 0, 1
                    values: ["Bisakol", "Tagalog", "English"]
                    background_normal: ''
                    background_color: 1, 0.83, 0.58, 1
                    on_text: root.spinner_clicked(spinner_id.text)

            MDFloatLayout:
                size_hint: .85, .055
                pos_hint: {"center_x": .5, "center_y": .7}
                canvas:
                    Color:
                        rgb: rgba(157, 147, 128, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                TextInput:
                    id: translate_input
                    hint_text: "Type here..."
                    hint_text_color: 0, 0, 0, 1
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .49}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 40
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 20
                    multiline: False
                    on_text_validate: app.root.get_screen('dictionary').save_word()
                MDIconButton:
                    icon: "assets/mic.png"
                    pos_hint: {"center_x": 0.88, "center_y": 0.5}
                    on_release: root.voice_input()

            MDBoxLayout:
                orientation: "vertical"
                size_hint: .82, .05
                pos_hint: {"center_x": .5, "center_y": .61}
                Spinner:
                    id: spinner_id2
                    text: "Translate to..."
                    color: 0, 0, 0, 1
                    values: ["Bisakol", "Tagalog", "English"]
                    on_text: root.spinner_clicked(spinner_id2.text)
                    background_normal: ''
                    background_color: 1, 0.83, 0.58, 1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: 0.85, 0.3
                pos_hint: {"center_x": .5, "center_y": .38}
                canvas.before:
                    Color:
                        rgb: rgba(231, 209, 168, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]
                TextInput:
                    id: translate_output
                    hint_text: "Translation"
                    hint_text_color: 0, 0, 0, 1
                    size_hint: 1, None
                    halign: "left"
                    pos_hint: {"left_x": .5, "left_y": .51}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 40
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 20
                    multiline: True
                    readonly: True
                MDIconButton:
                    icon: "assets/speaker.png"
                    pos_hint: {"center_x": 0.9, "center_y": 0.5}
                    on_release: root.voice_output()

            MDRectangleFlatIconButton:
                text: "   View Search History"
                icon: "assets/view.png"
                font_name: "fonts/Rubik-VariableFont.ttf"
                halign: "center"
                size_hint: .82, .05
                pos_hint: {"center_x": .5, "center_y": .18}
                md_bg_color: 0.847, 0.788, 0.678, 1
                text_color: "black"
                line_color: "white"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "history"

