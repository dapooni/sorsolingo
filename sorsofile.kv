WindowManager:
    Start:
    Login:
    Forgot:
    SignUp:
    MainWindow:
    DictionaryScreen:
    HistoryScreen:
    Profile:
    EditProfile:
    About:
    Help:
    Logout:

<Start>:
    name: "start"
    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1
            MDLabel:
                text: "sorsolingo."
                font_name: "fonts/RubikOne-Regular.ttf"
                font_size: 40
                pos_hint: {"center_x": .73, "center_y": .8}
                color: '90691C'

            Image:
                source: "assets/Sorsolingo.png"
                pos_hint: {"center_x": .50, "center_y": .60}
                size_hint: .83, .83

            MDLabel:
                text: "A Bicol dialect Machine Translator"
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 25
                pos_hint: {"center_x": .5, "center_y": .43}
                halign: "center"
                color: '6D5F5F'

            MDFillRoundFlatIconButton:
                icon: "assets/email.png"
                text: "    LOGIN WITH EMAIL"
                font_name: "fonts/RubikOne-Regular.ttf"
                bold: True
                md_bg_color: 117 / 255, 93 / 255, 47 / 255, 1
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .30}
                icon_size: "30sp"
                icon_colored: True
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "login"

            Button:
                text: "Didn't have an account? [color=000000][b]Sign Up[/b][/color]."
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 18
                color: '6D5F5F'
                markup: True
                background_color: 0, 0, 0, 0
                size_hint: .8, .065
                pos_hint: {"center_x": .5, "center_y": .225}
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "signup"

<Login>:
    name: "login"
    email: email_box
    password: pass_box

    MDScreen:
        MDFloatLayout:
            md_bg_color: 1, 1, 1, 1

            MDIconButton:
                icon: "assets/arrow.png"
                pos_hint: {"center_y": .93}
                size_hint: None, None
                user_font_size: "30sp"
                text_color: rgba(26, 24, 58, 255)
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "start"
                    root.email.text = ""
                    root.password.text = ""

            MDLabel:
                text: "sorsolingo."
                font_name: "fonts/RubikOne-Regular.ttf"
                font_size: 36
                halign: "center"
                pos_hint: {"center_x": .5, "center_y": .85}
                color: '90691C'

            MDLabel:
                text: "Log in on Sorsolingo :)"
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 20
                pos_hint: {"center_x": .5, "center_y": .8}
                halign: "center"
                color: '6D5F5F'

            Image:
                source: "assets/Sorsolingo2.png"
                pos_hint: {"center_x": .50, "center_y": .6}
                size_hint: .60, .60

            MDFloatLayout:
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .39}
                canvas:
                    Color:
                        rgb: rgba(216, 201, 173, 0)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                TextInput:
                    hint_text: "Email"
                    id: email_box
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 70
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 18
                    multiline: False
                    email: True
                Image:
                    source: "assets/email.png"
                    size_hint: None, None
                    size: 30, 30
                    pos_hint: {"center_x": .1, "center_y": .5}

            MDFloatLayout:
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .30}
                canvas:
                    Color:
                        rgba: 216/255, 201/255, 173/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
                TextInput:
                    hint_text: "Password"
                    id: pass_box
                    size_hint: 1, None
                    pos_hint: {"center_x": .5, "center_y": .5}
                    height: self.minimum_height
                    background_color: 0, 0, 0, 0
                    padding: 70
                    font_name: "fonts/RobotoCondensed-Regular.ttf"
                    font_size: 18
                    multiline: False
                    password: True
                Image:
                    source: "assets/key.png"
                    size_hint: None, None
                    size: 30, 30
                    pos_hint: {"center_x": .1, "center_y": .5}
                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .5}
                    pos: pass_box.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        pass_box.password = False if pass_box.password else True

            MDFillRoundFlatButton:
                text: "LOGIN WITH EMAIL"
                font_name: "fonts/RubikOne-Regular.ttf"
                bold: True
                md_bg_color: 117 / 255, 93 / 255, 47 / 255, 1
                size_hint: .85, .08
                pos_hint: {"center_x": .5, "center_y": .21}
                on_release: root.identify()

            Button:
                text: "Forgot password? [color=000000][b]Click here[/b][/color]."
                font_name: "fonts/RobotoCondensed-Regular.ttf"
                font_size: 18
                color: '6D5F5F'
                markup: True
                background_color: 0, 0, 0, 0
                size_hint: .5, .065
                pos_hint: {"center_x": .5, "center_y": .14}
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "forgot"

